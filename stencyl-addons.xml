<?xml version="1.0" encoding="UTF-8"?>
<stencyl-addons>

	<events-addon target="stencyl-behavior-events">
		<merge-section id="mobile.services">
			<event block="event-mobile-gamecenter" menuText="@events.defs.gamecenter" description="@events.defs.gamecenter" icon="gamecenter" menuIcon="gamecenter" />
		</merge-section>
	</events-addon>

	<palette-addon target="stencyl-behavior-palette">
		<merge-section id="game.mobile">
			<header title="@events.defs.gamecenter" icon="question" action="help:ios-game-center" />
			<block tag="gamecenter-init, gamecenter-enabled" />
			<block tag="gamecenter-id-name" />
			<spacer />
			<block tag="gamecenter-board-submit" />
			<block tag="gamecenter-board-show" />
			<spacer />
			<block tag="gamecenter-achievement-submit" />
			<block tag="gamecenter-achievement-show-reset" />
			<block tag="gamecenter-achievement-banner" />
			<spacer />
		</merge-section>
	</palette-addon>

</stencyl-addons>